<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #ece9e6, #ffffff);
            color: #333;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .grammar-container {
            margin-top: 100px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .feedback {
            display: none;
            margin-top: 10px;
            transition: opacity 0.5s ease-in-out;
        }

        .feedback.correct {
            color: green;
        }

        .feedback.incorrect {
            color: red;
        }

        .score {
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 20px;
        }

        .question {
            font-weight: bold;
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        .question-container {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .question-container img {
            width: 100px;
            height: 100px;
            margin-right: 20px;
        }

        .btn-hover {
            background-color: #007bff;
            color: white;
            transition: background-color 0.3s ease;
        }

        .btn-hover:hover {
            background-color: #0056b3 !important;
            color: white !important;
        }

        .progress-bar-container {
            margin-top: 20px;
        }

        .progress-bar {
            background-color: #28a745;
        }

        .hidden {
            display: none;
        }

        .timer {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ff0000;
        }

        .reward {
            font-size: 1.2rem;
            color: #28a745;
        }

        footer {
            background-color: #f1f1f1;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <main class="container grammar-container">
        <div class="card">
            <div class="card-header">
                Exercícios de Gramática
            </div>
            <section class="container-fluid gradient-bg">
                <div class="row text-center justify-content-center">
                    <div class="col-md-4">
                        <figure class="figure">
                            <img src="/images/blackboard.gif" class="figure-img img-fluid rounded mx-auto d-block" style="width: 50%;" alt="Exercícios de Gramática">
                        </figure>
                    </div>
                </div>
            </section>
            <div class="card-body">
                <div id="timer" class="text-center timer">Tempo: 60 segundos</div>
                <div id="grammar-quiz" class="mt-4">
                    <!-- Exercícios de gramática serão inseridos aqui -->
                </div>
                <div id="grammar-results" class="mt-4"></div>
                <div class="score mt-4">Pontuação: <span id="score">0</span></div>
                <div id="reward" class="reward text-center mt-4 hidden">Parabéns! Continue assim!</div>
                <div class="progress-bar-container">
                    <div class="progress">
                        <div id="progress-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div class="container text-center">
            <p>&copy; 2024 Aprenda Vocabulário. Todos os direitos reservados.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script>
        const grammarExercises = [
            {
                question: "Qual é a forma correta do verbo 'ir' no presente do indicativo para a terceira pessoa do singular?",
                options: ["vai", "vão", "vamos", "vaiam"],
                correct: "vai",
                image: "/images/go-kart.gif"
            },
            {
                question: "Escolha a frase correta:",
                options: ["Eu vou ir para casa.", "Eu vou à casa.", "Eu vou a casa.", "Eu vou casa."],
                correct: "Eu vou à casa.",
                image: "/images/home.gif"
            },
            {
                question: "Complete a frase: 'Ele ____ ao cinema ontem.'",
                options: ["foi", "vai", "irá", "iria"],
                correct: "foi",
                image: "/images/recommendation.gif"
            },
            {
                question: "Qual é o plural de 'cão'?",
                options: ["cães", "cãos", "cãeses", "cões"],
                correct: "cães",
                image: "/images/dog.gif"
            },
            {
                question: "Qual destas palavras está escrita corretamente?",
                options: ["impressão", "impreção", "impreção", "impressao"],
                correct: "impressão",
                image: "/images/emotions.gif"
            }
        ];

        function shuffle(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function generateGrammarQuiz(exercises) {
            const quizContainer = document.getElementById('grammar-quiz');
            quizContainer.innerHTML = '';

            exercises.forEach((exercise, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.classList.add('question-container');

                if (exercise.image) {
                    const image = document.createElement('img');
                    image.src = exercise.image;
                    questionDiv.appendChild(image);
                }

                const questionContent = document.createElement('div');
                questionContent.style.flex = "1";

                const question = document.createElement('p');
                question.classList.add('question');
                question.textContent = exercise.question;
                questionContent.appendChild(question);

                const answers = shuffle(exercise.options);
                answers.forEach(answer => {
                    const label = document.createElement('label');
                    label.classList.add('form-check-label');

                    const input = document.createElement('input');
                    input.type = 'radio';
                    input.name = `grammar-question-${index}`;
                    input.value = answer;
                    input.classList.add('form-check-input');
                    input.addEventListener('change', () => checkAnswer(input, exercise.correct, index));

                    label.appendChild(input);
                    label.append(answer);

                    const div = document.createElement('div');
                    div.classList.add('form-check');
                    div.appendChild(label);

                    questionContent.appendChild(div);
                });

                questionDiv.appendChild(questionContent);
                quizContainer.appendChild(questionDiv);
            });
        }

        function checkAnswer(input, correctAnswer, index) {
            const feedback = document.createElement('p');
            feedback.classList.add('feedback');
            if (input.value === correctAnswer) {
                feedback.classList.add('correct');
                feedback.textContent = "Correto!";
                showReward();
            } else {
                feedback.classList.add('incorrect');
                feedback.textContent = `Incorreto! A resposta correta é: ${correctAnswer}`;
            }
            input.closest('.question-container').appendChild(feedback);
            feedback.style.display = 'block';
        }

        function showReward() {
            const reward = document.getElementById('reward');
            reward.classList.remove('hidden');
            setTimeout(() => reward.classList.add('hidden'), 2000);
        }

        function startTimer() {
            let timeLeft = 60;
            const timer = document.getElementById('timer');
            const timerInterval = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    alert('O tempo acabou!');
                } else {
                    timer.textContent = `Tempo: ${timeLeft--} segundos`;
                }
            }, 1000);
        }

        document.addEventListener('DOMContentLoaded', () => {
            generateGrammarQuiz(grammarExercises);
            startTimer();
        });
    </script>
</body>
</html>
