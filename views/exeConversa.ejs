        footer {
            background-color: #f1f1f1;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            color: #333;
        }

        .profile-btn, .contact-btn, .video-call-btn {
            background-color: #007bff;
            color: white;
            transition: background-color 0.3s;
        }

        .profile-btn:hover, .contact-btn:hover, .video-call-btn:hover {
            background-color: #0056b3;
        }

        .modal-content {
            background: linear-gradient(to right, #ece9e6, #ffffff);
