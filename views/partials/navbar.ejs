<script>
  function setLanguage(lang) {
    fetch(`/languages/${lang}/translation.json`)
      .then(response => response.json())
      .then(data => {
        document.getElementById('nav-home').textContent = data['nav.home'] || 'Home';
        document.getElementById('nav-dashboard').textContent = data['nav.dashboard'] || 'Dashboard';
        document.getElementById('nav-exercises').textContent = data['nav.exercises'] || 'Exercises';
        document.getElementById('nav-vocabulary').textContent = data['nav.vocabulary'] || 'Vocabulary';
        document.getElementById('nav-grammar').textContent = data['nav.grammar'] || 'Grammar';
        document.getElementById('nav-conversation').textContent = data['nav.conversation'] || 'Conversation';
      })
      .catch(error => console.error('Error loading language file:', error));
  }
</script>

